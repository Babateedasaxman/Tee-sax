<%-include('header')%>
<style>
    
    .details{
        width:30%;

    }

    .item-grid{
        display: grid;
        width: 100;
        grid-template-columns: repeat(5,1fr);
        grid-gap:2rem;
    }

    .items-card{
        padding:1rem;
        width: 250px;
        box-shadow: 2px 2px 10px;
        height: fit-content;
        text-align: left;
    }

    .items-card img{
        max-width: 100%;
        height:200px;
        
    }

    .info{
        color:purple;
        font-weight: 600;
    }

    li{
        margin-bottom: 1.5rem;
    }
</style>
<div class="orders major-div">
    <h1 class="sh-1">Orders</h1>
    <div class="all-orders-container item-grid ">
        <%if(allOrders){%>
            <%allOrders.forEach((one)=>{%>
                <div class="items-card" >
                    <ul>
                    <li> <span class="info">name:</span><%=one.buyersName%> </li>
                    <li><span class="info">price:</span> #<%=one.price%> </li>
                    <li><span class="info">address:</span><%=one.buyersAddress%></li>
                    </ul>                    
                    <a href="/admin/getOneOrder/<%=one._id%>">see more</a>
                
               </div>
            <%})%>
        <%}%>

        
    </div>
    
</div>

<%-include('footer')%>